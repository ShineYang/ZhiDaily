<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--toolbar样式-->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/grey700</item><!--toolbar标题文字颜色-->
        <item name="actionMenuTextColor">@color/grey700</item> <!--敲定颜色-->
    </style>
    <!-- toolbar返回模式-->
    <style name="ToolbarActionBack" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/grey700</item><!--toolbar标题文字颜色-->
        <item name="actionMenuTextColor">@color/grey700</item> <!--敲定颜色-->
    </style>

</resources>
